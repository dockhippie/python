FROM ghcr.io/dockhippie/alpine:latest-arm@sha256:02a12466e1bf03eeddd93c71eeb637c45c370d853d0609761d1d605419f05cca

WORKDIR /srv/app

RUN apk update && \
  apk upgrade && \
  apk add build-base openssl-dev libffi-dev git python3-dev python3 py3-pip py3-tox && \
  rm -rf /var/cache/apk/*

COPY ./overlay /

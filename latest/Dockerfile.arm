FROM ghcr.io/dockhippie/alpine:latest-arm@sha256:e96ea8287d1891ed7ffd4986d10a98000ba4c0e6ffe53b16c9e117fb8e5bc096

WORKDIR /srv/app

RUN apk update && \
  apk upgrade && \
  apk add build-base openssl-dev libffi-dev git python3-dev python3 py3-pip py3-tox && \
  rm -rf /var/cache/apk/*

COPY ./overlay /

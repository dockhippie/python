FROM ghcr.io/dockhippie/alpine:latest-arm@sha256:ddc7342e028f7d813c37ffaf262fd319d00cc2809c589e333cfd75db9c9e1804

WORKDIR /srv/app

RUN apk update && \
  apk upgrade && \
  apk add build-base openssl-dev libffi-dev git python3-dev python3 py3-pip py3-tox && \
  rm -rf /var/cache/apk/*

COPY ./overlay /

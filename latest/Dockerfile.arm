FROM ghcr.io/dockhippie/alpine:latest-arm@sha256:f28b526efe69cefcd3e3ea69476240b4b8433d2612b42f9f09874ba4e32b49a0

WORKDIR /srv/app

RUN apk update && \
  apk upgrade && \
  apk add build-base openssl-dev libffi-dev git python3-dev python3 py3-pip py3-tox && \
  rm -rf /var/cache/apk/*

COPY ./overlay /

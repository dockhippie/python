FROM ghcr.io/dockhippie/alpine:latest-arm@sha256:7a60bb2fd5526a0486dd82c566bca86f601eea7f24b49a2a03d217cdeb21ffbf

WORKDIR /srv/app

RUN apk update && \
  apk upgrade && \
  apk add build-base openssl-dev libffi-dev git python3-dev python3 py3-pip py3-tox && \
  rm -rf /var/cache/apk/*

COPY ./overlay /

FROM ghcr.io/dockhippie/alpine:latest-arm@sha256:82a4e125ad57385800b271d9dc448ce932e061ece5af5ba1f5eb2be97701c555

WORKDIR /srv/app

RUN apk update && \
  apk upgrade && \
  apk add build-base openssl-dev libffi-dev git python3-dev python3 py3-pip py3-tox && \
  rm -rf /var/cache/apk/*

COPY ./overlay /

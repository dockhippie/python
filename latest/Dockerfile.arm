FROM ghcr.io/dockhippie/alpine:latest-arm@sha256:ad9c671ae7232ed33b06e55f6bb41c7b2bb7ab197eaae91138ad19a0560b3221

WORKDIR /srv/app

RUN apk update && \
  apk upgrade && \
  apk add build-base openssl-dev libffi-dev git python3-dev python3 py3-pip py3-tox && \
  rm -rf /var/cache/apk/*

COPY ./overlay /

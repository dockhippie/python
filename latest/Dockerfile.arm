FROM ghcr.io/dockhippie/alpine:latest-arm@sha256:801cd47009cfa461e662374ec6fef77eac28b80bc34d1cf9bb809aff067dee70

WORKDIR /srv/app

RUN apk update && \
  apk upgrade && \
  apk add build-base openssl-dev libffi-dev git python3-dev python3 py3-pip py3-tox && \
  rm -rf /var/cache/apk/*

COPY ./overlay /

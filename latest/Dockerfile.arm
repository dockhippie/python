FROM ghcr.io/dockhippie/alpine:latest-arm@sha256:5ef40d571b3dcba4e603dd6cbb4412b26c3a2bdc59d1d7eb257c1e5177e51bb0

WORKDIR /srv/app

RUN apk update && \
  apk upgrade && \
  apk add build-base openssl-dev libffi-dev git python3-dev python3 py3-pip py3-tox && \
  rm -rf /var/cache/apk/*

COPY ./overlay /

FROM ghcr.io/dockhippie/alpine:latest-arm@sha256:c273b77d1eac6eb953def81c275e995d032f04d5752fa97c33fe8258d587398e

WORKDIR /srv/app

RUN apk update && \
  apk upgrade && \
  apk add build-base openssl-dev libffi-dev git python3-dev python3 py3-pip py3-tox && \
  rm -rf /var/cache/apk/*

COPY ./overlay /

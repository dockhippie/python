FROM ghcr.io/dockhippie/alpine:latest-arm@sha256:c04a5bc1d3796e60961f9fb1e2328869d386c1b1f789659da8c7f0f91ea4138a

WORKDIR /srv/app

RUN apk update && \
  apk upgrade && \
  apk add build-base openssl-dev libffi-dev git python3-dev python3 py3-pip py3-tox && \
  rm -rf /var/cache/apk/*

COPY ./overlay /

FROM ghcr.io/dockhippie/alpine:latest-arm@sha256:8c64c1be1746192a96a6fb0eeaa9ae22f0eb07030edeed35cfce269190ee7281

WORKDIR /srv/app

RUN apk update && \
  apk upgrade && \
  apk add build-base openssl-dev libffi-dev git python3-dev python3 py3-pip py3-tox && \
  rm -rf /var/cache/apk/*

COPY ./overlay /

FROM ghcr.io/dockhippie/alpine:latest-amd64@sha256:05ec00e6f98fabfc56613b60cbd1e09ffed15c93904aadc18cd0703dd45b2602

WORKDIR /srv/app

RUN apk update && \
  apk upgrade && \
  apk add build-base openssl-dev libffi-dev git python3-dev python3 py3-pip py3-tox && \
  rm -rf /var/cache/apk/*

COPY ./overlay /

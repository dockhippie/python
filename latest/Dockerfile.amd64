FROM ghcr.io/dockhippie/alpine:latest-amd64@sha256:c2a50316fae41f5df6339e5755404dbc6ab05356bac538e2073d1f94d62a786e

WORKDIR /srv/app

RUN apk update && \
  apk upgrade && \
  apk add build-base openssl-dev libffi-dev git python3-dev python3 py3-pip py3-tox && \
  rm -rf /var/cache/apk/*

COPY ./overlay /

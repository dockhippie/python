FROM ghcr.io/dockhippie/alpine:latest-amd64@sha256:cff815fe0b029fefe033533ecfade3b0788493386807d993d1fad48c1ee5afa5

WORKDIR /srv/app

RUN apk update && \
  apk upgrade && \
  apk add build-base openssl-dev libffi-dev git python3-dev python3 py3-pip py3-tox && \
  rm -rf /var/cache/apk/*

COPY ./overlay /

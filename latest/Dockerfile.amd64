FROM ghcr.io/dockhippie/alpine:latest-amd64@sha256:51efc8a3d71bcbee6a8d3600cfc3e7247fea96e3874a2ff18f1dbe2e1833c2fe

WORKDIR /srv/app

RUN apk update && \
  apk upgrade && \
  apk add build-base openssl-dev libffi-dev git python3-dev python3 py3-pip py3-tox && \
  rm -rf /var/cache/apk/*

COPY ./overlay /

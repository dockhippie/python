FROM ghcr.io/dockhippie/alpine:latest-amd64@sha256:7d932ad227a65d4c22638bffab68e7aa54e0a1d2b2c41e65360710c6adc90f92

WORKDIR /srv/app

RUN apk update && \
  apk upgrade && \
  apk add build-base openssl-dev libffi-dev git python3-dev python3 py3-pip py3-tox && \
  rm -rf /var/cache/apk/*

COPY ./overlay /

FROM ghcr.io/dockhippie/alpine:latest-amd64@sha256:88b6f3b735ffc067e8f41b2a76c7d2c47f59c51dfcb78cfd91ca8025c8a96587

WORKDIR /srv/app

RUN apk update && \
  apk upgrade && \
  apk add build-base openssl-dev libffi-dev git python3-dev python3 py3-pip py3-tox && \
  rm -rf /var/cache/apk/*

COPY ./overlay /

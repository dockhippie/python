FROM ghcr.io/dockhippie/alpine:latest-amd64@sha256:92e5bdba91f11d5b37d837a4a1318ff5d61a0f84c3bc5362353908285db83148

WORKDIR /srv/app

RUN apk update && \
  apk upgrade && \
  apk add build-base openssl-dev libffi-dev git python3-dev python3 py3-pip py3-tox && \
  rm -rf /var/cache/apk/*

COPY ./overlay /

FROM ghcr.io/dockhippie/alpine:latest-amd64@sha256:a61d119da046ea4b425670e82050aa515101a21b2ff5ce645e90cbfbc250defe

WORKDIR /srv/app

RUN apk update && \
  apk upgrade && \
  apk add build-base openssl-dev libffi-dev git python3-dev python3 py3-pip py3-tox && \
  rm -rf /var/cache/apk/*

COPY ./overlay /

FROM ghcr.io/dockhippie/alpine:latest-amd64@sha256:e868fc38710bc96061da96d7a3ecea6662ec0ff290d01943036fdecd321ce734

WORKDIR /srv/app

RUN apk update && \
  apk upgrade && \
  apk add build-base openssl-dev libffi-dev git python3-dev python3 py3-pip py3-tox && \
  rm -rf /var/cache/apk/*

COPY ./overlay /

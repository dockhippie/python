FROM ghcr.io/dockhippie/alpine:latest-amd64@sha256:d169fcf05bea705656801e7c825e3481cc1bc622b15aa7bfed8d442267c2be91

WORKDIR /srv/app

RUN apk update && \
  apk upgrade && \
  apk add build-base openssl-dev libffi-dev git python3-dev python3 py3-pip py3-tox && \
  rm -rf /var/cache/apk/*

COPY ./overlay /

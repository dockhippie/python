FROM ghcr.io/dockhippie/alpine:latest-amd64@sha256:21129a7d1ec61f07acab800a7380867069f5b21e15d4b54f45eb25bd8e7e3a38

WORKDIR /srv/app

RUN apk update && \
  apk upgrade && \
  apk add build-base openssl-dev libffi-dev git python3-dev python3 py3-pip py3-tox && \
  rm -rf /var/cache/apk/*

COPY ./overlay /

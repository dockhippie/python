FROM ghcr.io/dockhippie/alpine:latest-arm64@sha256:84a74c5f4eeb011d74b091b50d83e1b91e9bb193248efbeb6a04d348ad14805d

WORKDIR /srv/app

RUN apk update && \
  apk upgrade && \
  apk add build-base openssl-dev libffi-dev git python3-dev python3 py3-pip py3-tox && \
  rm -rf /var/cache/apk/*

COPY ./overlay /

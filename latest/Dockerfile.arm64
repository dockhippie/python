FROM ghcr.io/dockhippie/alpine:latest-arm64@sha256:e1d0d6fd096bbbad552c3121213ce7f8cd7da10b30aa182266deb1c48509eebc

WORKDIR /srv/app

RUN apk update && \
  apk upgrade && \
  apk add build-base openssl-dev libffi-dev git python3-dev python3 py3-pip py3-tox && \
  rm -rf /var/cache/apk/*

COPY ./overlay /

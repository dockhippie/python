FROM ghcr.io/dockhippie/alpine:latest-arm64@sha256:f2b5f17d5bcecc876889c72fe2f08c8747a6643a250ccd7b5b72ccdfddbb36f7

WORKDIR /srv/app

RUN apk update && \
  apk upgrade && \
  apk add build-base openssl-dev libffi-dev git python3-dev python3 py3-pip py3-tox && \
  rm -rf /var/cache/apk/*

COPY ./overlay /

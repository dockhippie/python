FROM ghcr.io/dockhippie/alpine:latest-arm64@sha256:769a99d0c749716671de8bae2d62d978046cbb66afdd52d8ec25c8f9b559c1bb

WORKDIR /srv/app

RUN apk update && \
  apk upgrade && \
  apk add build-base openssl-dev libffi-dev git python3-dev python3 py3-pip py3-tox && \
  rm -rf /var/cache/apk/*

COPY ./overlay /

FROM ghcr.io/dockhippie/alpine:latest-arm64@sha256:575bed5f4723df91cb16ff3ad3fe1c479839dcd568db3cad204efb36d85125f6

WORKDIR /srv/app

RUN apk update && \
  apk upgrade && \
  apk add build-base openssl-dev libffi-dev git python3-dev python3 py3-pip py3-tox && \
  rm -rf /var/cache/apk/*

COPY ./overlay /

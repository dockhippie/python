FROM ghcr.io/dockhippie/alpine:latest-arm64@sha256:ec8105efc75f53f43d838c740d8cb21715abc2ad35c9eb9462c56bd67aba990b

WORKDIR /srv/app

RUN apk update && \
  apk upgrade && \
  apk add build-base openssl-dev libffi-dev git python3-dev python3 py3-pip py3-tox && \
  rm -rf /var/cache/apk/*

COPY ./overlay /

FROM ghcr.io/dockhippie/alpine:latest-arm64@sha256:b2f0ffcc3c0aa87735393a5df534837936a4c269b9de0bf2d26138f011a51f5b

WORKDIR /srv/app

RUN apk update && \
  apk upgrade && \
  apk add build-base openssl-dev libffi-dev git python3-dev python3 py3-pip py3-tox && \
  rm -rf /var/cache/apk/*

COPY ./overlay /

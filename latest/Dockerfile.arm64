FROM ghcr.io/dockhippie/alpine:latest-arm64@sha256:05f0da60e5ac1c20fa07bd3ba59fab879abe05561783b8666beab35f356feae4

WORKDIR /srv/app

RUN apk update && \
  apk upgrade && \
  apk add build-base openssl-dev libffi-dev git python3-dev python3 py3-pip py3-tox && \
  rm -rf /var/cache/apk/*

COPY ./overlay /

FROM ghcr.io/dockhippie/alpine:latest-arm64@sha256:e2b707cd6cb133485f944ec4f7dd50e13f7bb21300774df2bc93919fa8ddc608

WORKDIR /srv/app

RUN apk update && \
  apk upgrade && \
  apk add build-base openssl-dev libffi-dev git python3-dev python3 py3-pip py3-tox && \
  rm -rf /var/cache/apk/*

COPY ./overlay /

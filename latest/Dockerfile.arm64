FROM ghcr.io/dockhippie/alpine:latest-arm64@sha256:116a545b7d9b4cba862f665a82a822d5079bfabd9c10d5b2aa15b4dcbadee793

WORKDIR /srv/app

RUN apk update && \
  apk upgrade && \
  apk add build-base openssl-dev libffi-dev git python3-dev python3 py3-pip py3-tox && \
  rm -rf /var/cache/apk/*

COPY ./overlay /

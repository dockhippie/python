FROM ghcr.io/dockhippie/alpine:latest-arm64@sha256:a08ec5f5aaf68c73e1ae4d1cfe9949dccf9e3f0c49d8088a0f0c42491ef77cd3

WORKDIR /srv/app

RUN apk update && \
  apk upgrade && \
  apk add build-base openssl-dev libffi-dev git python3-dev python3 py3-pip py3-tox && \
  rm -rf /var/cache/apk/*

COPY ./overlay /

FROM ghcr.io/dockhippie/alpine:latest-arm64@sha256:b606e61dbf21974132d6353a6ff3a34e8c22a1216d2119847ab0ae77f0575199

WORKDIR /srv/app

RUN apk update && \
  apk upgrade && \
  apk add build-base openssl-dev libffi-dev git python3-dev python3 py3-pip py3-tox && \
  rm -rf /var/cache/apk/*

COPY ./overlay /

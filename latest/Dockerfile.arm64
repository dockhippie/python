FROM ghcr.io/dockhippie/alpine:latest-arm64@sha256:e8268a1cd17f6e77e88a180d3fdc6274c327f40173994d692e687232ab3a0ad8

WORKDIR /srv/app

RUN apk update && \
  apk upgrade && \
  apk add build-base openssl-dev libffi-dev git python3-dev python3 py3-pip py3-tox && \
  rm -rf /var/cache/apk/*

COPY ./overlay /

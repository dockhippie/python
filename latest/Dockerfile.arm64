FROM ghcr.io/dockhippie/alpine:latest-arm64@sha256:68d64474a20f52979b7e865dd2bb57c46051a30fae1b0154e74ffaf70d17dae8

WORKDIR /srv/app

RUN apk update && \
  apk upgrade && \
  apk add build-base openssl-dev libffi-dev git python3-dev python3 py3-pip py3-tox && \
  rm -rf /var/cache/apk/*

COPY ./overlay /
